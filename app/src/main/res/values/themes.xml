<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Say_az" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorTeal</item>
        <item name="colorPrimaryVariant">@color/colorTealLight</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="colorAccent">@color/colorTeal</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorOrange</item>
        <item name="colorSecondaryVariant">@color/colorOrangeLight</item>
        <item name="colorOnSecondary">@color/colorWhite</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/colorWhite</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorSecondary">@color/colorGrey</item>
    </style>

    <style name="Theme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/drawable_button_bg</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/colorTeal</item>
    </style>

    <style name="NextIconStyle" parent="Widget.MaterialComponents.TextView">
        <item name="drawableEndCompat">@drawable/drawable_teal_next</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="Theme.TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/colorTeal</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="Theme.TextInputLayoutStyleExposed" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

    <style name="FullScreenDialogStyleSettingsDialog">
        <item name="android:windowBackground">@color/colorBlackTransparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize" parent="">
        <item name="cornerSize">14dp</item>
        <item name="android:colorBackground">@color/colorWhite</item>
    </style>

    <style name="Theme.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorGreyLightDark</item>
        <item name="cardCornerRadius">14dp</item>
    </style>
</resources>